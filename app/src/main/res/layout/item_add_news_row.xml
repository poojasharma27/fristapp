<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:id="@+id/cLMain"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cVImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin24"
        android:layout_marginTop="@dimen/margin24"
        app:cardCornerRadius="@dimen/margin16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivNews"
            android:layout_width="250dp"
            android:layout_height="@dimen/margin150"
            android:scaleType="centerCrop"
            android:src="@drawable/img_girlres_background"

            />


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvNewsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin24"
        android:fontFamily="@font/montserrat_semibold"
        android:text="@string/hello"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/margin8"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize16"
        android:maxLines="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cVImage" />

    <TextView
        android:id="@+id/tvtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin24"
        android:fontFamily="@font/montserrat_light"
        android:text="@string/hello"
        android:textSize="@dimen/textsize8"
        android:layout_marginTop="@dimen/margin8"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNewsName" />

</androidx.constraintlayout.widget.ConstraintLayout>